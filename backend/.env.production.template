# Production Environment Variables for Audio Duplicate Detection SaaS
# Copy this to .env for production deployment

# CRITICAL: Change these for production!
DEBUG=False
SECRET_KEY=your-production-secret-key-must-be-at-least-50-random-characters-change-this-immediately
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database (Production - use PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/audioduplicate_prod

# Stripe Configuration (LIVE keys for production!)
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key_here
STRIPE_SECRET_KEY=sk_live_your_live_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_live_webhook_secret_here

# Email Configuration (Production SMTP)
EMAIL_HOST=smtp.mailgun.org
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your-smtp-password
EMAIL_PORT=587
EMAIL_USE_TLS=True

# Site Configuration (Production URLs)
SITE_URL=https://yourdomain.com
SITE_NAME=Audio Duplicate Detection
DEFAULT_CURRENCY=GBP

# Security Settings (Production)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Optional: Analytics and Monitoring
SENTRY_DSN=your-sentry-dsn-for-error-tracking
GOOGLE_ANALYTICS_ID=your-ga-id-here

# Optional: CDN and Static Files
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_STORAGE_BUCKET_NAME=your-s3-bucket
AWS_S3_REGION_NAME=eu-west-2